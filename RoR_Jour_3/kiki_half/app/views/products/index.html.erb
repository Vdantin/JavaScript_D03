<h1>Listing products</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <table class="table table-hover">
            <th>User Id</th>

    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Actions</th>

    <tr>
      <td><%= product.user_id %></td>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
    </table>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create product', new_product_path %>
